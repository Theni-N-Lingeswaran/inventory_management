                    <i class="nav-icon <%=side_panel_main_links.link_icon%> "></i><p><%=side_panel_main_links.link_name%><%if @side_panel_sub_links.count != 0%><i class="right fas fa-angle-right"></i><%end%></p>
                  </a>

                  <%if @side_panel_sub_links.count != 0%>
                    <ul class="nav nav-treeview">
                    <%@side_panel_sub_links.each do |side_panel_sub_links|
                    active_link = ''
                    if side_panel_sub_links.link_url.include?(current_url_path) == true
                      active_link = 'active'
                    end%>
                      <li class="nav-item">
