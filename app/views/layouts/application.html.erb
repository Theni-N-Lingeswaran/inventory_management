              <% @side_panel_links = SidePanelLink.all.select{|main| main.link_for.include?(current_user.role) && main.parent_link_id == nil}
              @side_panel_links.each do |side_panel_main_links|
                @side_panel_sub_links = side_panel_main_links.side_panel_sub_links.select{|sub_link| sub_link.link_for.include?(current_user.role)}
                current_url_path = request.fullpath&.split('/')[1]
                active_link = ''
                if (['admin_home', 'employee_home', 'customer_home'].include?(current_url_path) && side_panel_main_links.id == 1) || side_panel_main_links.link_url.include?(request.path_parameters[:action]) == true
